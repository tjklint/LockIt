<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LockIt.Views.MenuPage"
             xmlns:views="clr-namespace:LockIt.Views">
    <VerticalStackLayout VerticalOptions="Center" >
        <views:HeaderView />

        <Button
            Margin="25"
            Text="ACCESS CAMERA" 
            BackgroundColor="#189E8A" 
            TextColor="White" 
            FontFamily="Jersey15Regular"
            CornerRadius="2"
            FontSize="30"
            WidthRequest="300"
            Clicked="OnAccessCameraClicked"/>

        <Button 
            Margin="25"
            Text="SET CODE" 
            BackgroundColor="#189E8A" 
            TextColor="White" 
            FontFamily="Jersey15Regular"
            CornerRadius="2"
            FontSize="30"
            WidthRequest="300"
            Clicked="OnSetLockedClicked"/>

        <Button 
            x:Name="LockButton"
            Margin="25"
            Text="OPEN LOCK"
            BackgroundColor="#189E8A" 
            TextColor="White" 
            FontFamily="Jersey15Regular"
            CornerRadius="2"
            FontSize="30"
            WidthRequest="300"
            Clicked="OnOpenLockClicked"/>

        <Button 
            x:Name="MapButton"
            Margin="25"
            Text="FIND MY DOORBELL"
            BackgroundColor="#189E8A" 
            TextColor="White" 
            FontFamily="Jersey15Regular"
            CornerRadius="2"
            FontSize="30"
            WidthRequest="300"
            Clicked="OnMapClicked"/>
        
        <Button 
            Margin="25"
            Text="MANAGE VISITOR" 
            BackgroundColor="#189E8A" 
            TextColor="White" 
            FontFamily="Jersey15Regular"
            CornerRadius="2"
            FontSize="30"
            WidthRequest="300"
            Clicked="OnManageVisitorClicked"/>
        
        
    </VerticalStackLayout>
</ContentPage>