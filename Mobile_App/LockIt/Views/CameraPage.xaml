<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LockIt.Views.CameraPage"
             xmlns:views="clr-namespace:LockIt.Views"
             Title="Camera Page">

    <VerticalStackLayout Padding="20">
        
        <views:HeaderView />
        
        <Image Source="{Binding CameraImage}"
               WidthRequest="300"
               HeightRequest="300"
               Aspect="AspectFit" />
        
        <Button Text="Take Picture" Clicked="OnTakePictureClicked"/>

        <Label Text="{Binding MotionStatus}"
               FontSize="20"
               HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
