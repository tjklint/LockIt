<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LockIt.Views.OpenLockPage">
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="30">
        <Label Text="Open Lock" FontSize="40" FontFamily="Jersey15Regular" TextColor="Black" />
        <Button x:Name="LockControlButton"
                Text="Unlock"
                FontSize="25"
                FontFamily="Jersey15Regular"
                BackgroundColor="#189E8A"
                TextColor="White"
                WidthRequest="200"
                HeightRequest="60"
                Clicked="OnLockControlClicked"/>
    </VerticalStackLayout>
</ContentPage>