<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LockIt.Views.RegisterPage"
             xmlns:vm="clr-namespace:LockIt.ViewModels"
>

    <ContentPage.BindingContext>
        <vm:RegisterViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <StackLayout 
            Padding="30"
            Spacing="20">

            <Label 
                Text="Register" 
                FontSize="50" 
                FontFamily="Jersey15Regular" 
                HorizontalOptions="Center"
                TextColor="White" />

            <Entry 
                x:Name="UsernameEntry" 
                Placeholder="Username" 
                Text="{Binding Username}" 
                BackgroundColor="White" 
                TextColor="Black" 
                FontFamily="Jersey15Regular" />

            <Entry 
                x:Name="EmailEntry" 
                Placeholder="Email" 
                Text="{Binding Email}" 
                BackgroundColor="White" 
                TextColor="Black" 
                FontFamily="Jersey15Regular"
                Keyboard="Email" />

            <Entry 
                x:Name="PasswordEntry" 
                Placeholder="Password" 
                IsPassword="True" 
                Text="{Binding Password}" 
                BackgroundColor="White" 
                TextColor="Black" 
                FontFamily="Jersey15Regular" />

            <Entry 
                x:Name="ConfirmPasswordEntry" 
                Placeholder="Confirm Password" 
                IsPassword="True" 
                Text="{Binding ConfirmPassword}" 
                BackgroundColor="White" 
                TextColor="Black" 
                FontFamily="Jersey15Regular" />

            <Button 
                Text="REGISTER" 
                Command="{Binding RegisterCommand}"
                BackgroundColor="#189E8A" 
                TextColor="White" 
                FontFamily="Jersey15Regular" 
                CornerRadius="5"/>

            <Button Text="Already have an account? Login" Command="{Binding NavigateToLoginCommand}" BackgroundColor="Transparent" TextColor="#189E8A" HorizontalOptions="Center" />

        </StackLayout>
    </Grid>
</ContentPage>