<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LockIt.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LockIt"
    xmlns:views="clr-namespace:LockIt.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="LockIt">

    <FlyoutItem Title="Home" Icon="home.png">
        <ShellContent
        Title="Find My"
        Icon="search.png"
        ContentTemplate="{DataTemplate views:FindMyPage}"/>
        
        <ShellContent
        Title="Camera"
        Icon="select.png"
        ContentTemplate="{DataTemplate views:CameraPage}"/>
        
        <ShellContent
        Title="Access Code"
        Icon="camera.png"
        ContentTemplate="{DataTemplate views:AccessCodePage}"/>
        
        <ShellContent
        Title="Menu"
        Icon="video.png"
        ContentTemplate="{DataTemplate views:VisitorMenuPage}"/>
        
        <ShellContent
        Title="Profile"
        Icon="user.png"
        ContentTemplate="{DataTemplate views:ProfilePage}"/>

    </FlyoutItem>



</Shell>
