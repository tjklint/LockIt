<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LockIt.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LockIt"
    xmlns:views="clr-namespace:LockIt.Views"
    Shell.TabBarBackgroundColor="#189E8A"
    Shell.TabBarForegroundColor="White"
    Title="LockIt">


    <TabBar>
        
        <ShellContent
        Icon="radar.png"
        ContentTemplate="{DataTemplate views:FindMyPage}"/>

        <ShellContent
        Icon="lock.png"
        ContentTemplate="{DataTemplate views:AccessCodePage}"/>
        
        <!-- Todo change where it goes based on login -->
        <ShellContent
        Icon="menu.png"
        ContentTemplate="{DataTemplate views:VisitorMenuPage}"/>
        
        <ShellContent
        Icon="profile.png"
        ContentTemplate="{DataTemplate views:ProfilePage}"/>

    </TabBar>



</Shell>
